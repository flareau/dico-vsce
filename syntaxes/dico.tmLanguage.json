{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Dico",
	"patterns": [
		{"include": "#keywords"},
		{"include": "#strings"},
		{"include": "#variables"},
		{"include": "#functions"},
		{"include": "#headword"},
		{"include": "#styles"},
		{"include": "#comments"}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.dico",
					"match": "%.*$"
				},
				{
					"name": "comment.block.source.dico",
					"match": "(?<=\"\\s*)\\(\\s*(https?://.+?|inventé)\\s*\\)"
				},
				{
					"name": "invalid.illegal.feedback.dico",
					"match": "^\\s*[\\-|\\+|\\*|!].*$"
				}
			]
		},
		"headword": {
			"patterns": [
				{
					"name": "markup.bold.headword.dico",
					"match": "^\\w+\\s*/[\\w\\.~]+/\\s*$"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "markup.heading.1.dico",
					"match": "^\\d+\\."
				},
				{
					"name": "keyword.control.dico",
					"match": "\\b(DEF|SEM|TR|FL|EX|REM)\\b"
				},
				{
					"name": "keyword.control.dico",
					"match": "(&|\\+)"
				},
				{
					"name": "markup.bold.dico",
					"match": "~"
				},
				{
					"name": "keyword.control.dico",
					"match": "(?<!\\w)@(?=\\w)"
				},
				{
					"name": "storage.modifier.dico",
					"match": "(?<=\\w)#\\d+\\b"
				},
				{
					"name": "entity.name.type.dico",
					"match": "(?<=\\w)_(V|N|Adj|Adv|Prép|Pro|Dét)"
				},
				{
					"name": "entity.name.type.dico",
					"match": "(?<=(V|~))\\.(ind|subj|inf|pp|pprés)?=\\b"
				},
				{
					"name": "entity.name.type.dico",
					"match": "(?<=(N|~))(\\.(déf|indéf|ø))?(\\.(sg|pl))?\\b"
				},
				{
					"name": "entity.name.type.dico",
					"match": "(?<=\\w)_\\d+\\b"
				}
			]
		},
		"variables": {
			"patterns": [
				{
					"name": "variable.language.dico",
					"match": "(?<!/\\s*)\\b(X|Y|Z|A|B|C)[1-9]?\\b(?!\\s*/)"
				},
				{
					"name": "variable.parameter.dico",
					"match": "(?<=\\([^\\(\\)]*)\\b\\w+\\b(?=[^\\(\\)]*\\))"
				},
				{
					"name": "variable.parameter.dico",
					"match": "\\b\\w+:(?=\\w)"
				},
				{
					"name": "entity.name.type.dico",
					"match": "\\b(N|V|Adj|Adv|Prép|Pro|Dét)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.example.dico",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.dico",
					"match": "\\\\."
				}
			]
		},
		"functions": {
			"patterns": [
				{
					"name": "support.function.dico",
					"match": "\\b(Q?(A\\d|Able\\d|Adv\\d|Anti|Bon\\d?|Cap|Caus\\d|Claus|Cont|Contr|Conv\\d{2,}|Copul|Degrad|Epit|Equip|Excess|Fact\\d+|Figur|Fin|Func\\d+|Gener|Imper|Imperf|Incep|Instr|Involv\\d+|Labor\\d{2,}|Labreal\\d{2,}|Liqu\\d?|Locab|Locad|Locin|Magn\\d?|Manif|Minus|Mult\\d?|Non|Obstr|Oper\\d+|Perf|Perm\\d+?|Plus|Pred|Prepar|Propt\\d|Prox|Qual\\d|Real\\d+|Redun|Result\\d|S\\d|Sing|Sinstr|Sloc|Smed|Smod|Son|Sres|Stop|Sympt\\d{3}|Syn|V0|Ver))+\\b"
				},
				{
					"name": "support.function.dico",
					"match": "<[^\\>]+>"
				}
			]
		},
		"styles": {
			"patterns": [
				{"name": "comment.line.dico", "match": "\\bCOM_LINE\\b"},
				{"name": "comment.block", "match": "\\bCOM_BLOCK\\b"},
				{"name": "constant.numeric", "match": "\\bCONST_NUM\\b"},
				{"name": "constant.character.escape", "match": "\\bCONST_ESC\\b"},
				{"name": "constant.language", "match": "\\bCONST_LANG\\b"},
				{"name": "entity.name.class", "match": "\\bCLASS\\b"},
				{"name": "entity.name.function", "match": "\\bFUNC\\b"},
				{"name": "entity.name.method", "match": "\\bMETH\\b"},
				{"name": "entity.name.section", "match": "\\bSEC\\b"},
				{"name": "entity.name.selector", "match": "\\bSEL\\b"},
				{"name": "entity.name.tag", "match": "\\bTAG\\b"},
				{"name": "entity.name.type", "match": "\\bTYPE\\b"},
				{"name": "invalid.deprecated", "match": "\\bDEPR\\b"},
				{"name": "invalid.illegal", "match": "\\bILL\\b"},
				{"name": "keyword.control", "match": "\\bCTRL\\b"},
				{"name": "keyword.control.less", "match": "\\bLESS\\b"},
				{"name": "markup.bold", "match": "\\bBOLD\\b"},
				{"name": "markup.changed", "match": "\\bCHANGED\\b"},
				{"name": "markup.deleted", "match": "\\bDEL\\b"},
				{"name": "markup.heading", "match": "\\bHEAD\\b"},
				{"name": "markup.inline.raw", "match": "\\bRAW\\b"},
				{"name": "markup.inserted", "match": "\\bINS\\b"},
				{"name": "markup.italic", "match": "\\bITAL\\b"},
				{"name": "markup.list.numbered", "match": "\\bLIST_NUM\\b"},
				{"name": "markup.list.unnumbered", "match": "\\bLIST_BULL\\b"},
				{"name": "storage.modifier", "match": "\\bMOD\\b"},
				{"name": "storage.type", "match": "\\bSTOR_TYPE\\b"},
				{"name": "string.quoted", "match": "\\bQUOTED\\b"},
				{"name": "string.unquoted", "match": "\\bUNQUOTED\\b"},
				{"name": "string.regexp", "match": "\\bREGEX\\b"},
				{"name": "support.class", "match": "\\bSUPP_CLASS\\b"},
				{"name": "support.constant", "match": "\\bSUPP_CONST\\b"},
				{"name": "support.function", "match": "\\bSUPP_FUNC\\b"},
				{"name": "support.type", "match": "\\bSUPP_TYPE\\b"},
				{"name": "support.variable", "match": "\\bSUPP_VAR\\b"},
				{"name": "variable.language", "match": "\\bVAR_LANG\\b"},
				{"name": "variable.name", "match": "\\bVAR_NAME\\b"},
				{"name": "variable.parameter", "match": "\\bVAR_PARAM\\b"}
			]
		}
	},
	"scopeName": "text.dico"
}